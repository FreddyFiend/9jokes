datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String    @id @default(cuid())
  name     String?
  email    String    @unique
  image    String?
  isAdmin  Boolean?  @default(false)
  isBanned Boolean   @default(false)
  posts    Post[]
  upvotes  Upvote[]
  comments Comment[]
}

model Post {
  id          String    @id @default(cuid())
  title       String
  imageKey    String?
  image       String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  upvoteCount Int       @default(0)
  upvotes     Upvote[]
  comments    Comment[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  category    String?
}

model Upvote {
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())

  @@id([userId, postId])
}

model Comment {
  id        String   @id @default(cuid())
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}
